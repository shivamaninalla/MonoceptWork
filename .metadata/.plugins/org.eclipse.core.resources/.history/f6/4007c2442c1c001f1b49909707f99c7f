package com.monocept.strings;

import java.util.Random;
import java.util.Scanner;

public class PIGObject {

	public static void main(String[] args) {
		
        Scanner scanner = new Scanner(System.in);
        
        int n = 20, randomNumber = 0;
        int score = 0;
        int final_score = 0;
        int turns = 1;
        int i;
        
        for (i = 1;; i++) {
            System.out.println("Enter r/h");
            char turn = scanner.next().charAt(0);
            rollOrHead(turn, n, randomNumber, final_score, turns);
        }

	}

	

	private static void rollOrHead(char turn, int n, int randomNumber, int final_score, int turns) {
		if (turn == 'r') {
            System.out.println("Turn " + turns);
            int d = 1;
            d++;
            Random random = new Random();
            randomNumber = random.nextInt(6) + 1;
            System.out.println("Die " + randomNumber);
		
	}

	
	

}
