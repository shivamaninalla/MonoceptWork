package com.monocept.strings;

import java.util.Random;
import java.util.Scanner;

public class PIGObject {

	public static void main(String[] args) {
		
        Scanner scanner = new Scanner(System.in);
        
        int n = 20, randomNumber = 0;
        int score = 0;
        int final_score = 0;
        int turns = 1;
        int i;
        
        for (i = 1;; i++) {
            System.out.println("Enter r/h");
            char turn = scanner.next().charAt(0);
            if(turn=='r')
            roll(turn, n, randomNumber, final_score, turns);
            if(turn=='h')
            head(turn, n, randomNumber, final_score, turns);
        }

	}

	

	private static void head(char turn, int n, int randomNumber, int final_score, int turns) {
		int score;
		turns += 1;
        final_score += score;
        score = 0;
        System.out.println("final score : " + final_score);
        
        if (final_score > 20) {
            System.out.println("You won");
            System.out.println("No.of turns : " + turns);
            
		
	}
	}


	private static void roll(char turn, int n, int randomNumber, int final_score, int turns) {
		
            System.out.println("Turn " + turns);
            int d = 1;
            d++;
            Random random = new Random();
            randomNumber = random.nextInt(6) + 1;
            System.out.println("Die " + randomNumber);
            System.out.println("score: " + score(randomNumber,turns));
            
	}



	private static int score(int randomNumber, int turns) {
		int score;
		if (randomNumber == 1) {
             turns += 1;
             return score;
         } 
		 return score += randomNumber;
		 
		
	}
	
	
}
